---
import MainHead from "../components/MainHead.astro";
import Footer from "../components/Footer/index.jsx";
import Nav from "../components/Nav/index.astro";
import Button from "../components/Button/index.jsx";
import { SEO } from "astro-seo";
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />
    <SEO
      title="Alessandro Filazzola - Contact"
      description="Are you interested in collaborating, have a question about my research, or just want to say hi? Feel free to reach out to me by clicking on the button below."
      openGraph={{
        basic: {
          title: "Alessandro Filazzola - Contact",
          type: "website",
          image: "/AlexContact.jpg",
        },
      }}
    />
    <MainHead
      title="Contact | Alessandro Filazzola"
      description="Contact Alessandro Filazzola"
    />
    <style lang="scss">
      .heroImg {
        max-height: 24rem;
        object-fit: cover;
        overflow: hidden;

        img {
          width: 100%;
        }
      }

      .center-image {
        display: flex;
        align-items: center;
        justify-content: center;
        /* Add any additional styling as needed */
        height: 350px; /* You can adjust the height of the container as needed */
      }
    </style>
  </head><body>
    <Nav />
    <div class="wrapper">
      <h1>Contact</h1>
      <div class="heroImg center-image">
        <img width="1400" height="400" src="/HeaderContact.jpg" alt="Mountain landscape header" loading="eager" />
      </div>
      <div
        class="max-w-md mx-auto overflow-hidden md:max-w-4xl my-4 small-screen-padding md:text-xl text-lg fade-in"
      >
        <h1 class="py-12 mx-auto text-5xl md:text-6xl">Get in touch!</h1>
        <div class="md:flex my-4 md:space-x-4">
          <div class="md:w-3/5 pb-4 md:pb-0">
            <img
              class="w-72 md:w-full object-cover md:h-full mx-auto"
              src="/AlexContact.jpg"
              alt="Alessandro Filazzola contact photo"
              loading="lazy"
            />
          </div>
          <div class="md:w-2/5">
            <p>
              Are you interested in collaborating, have a question about my
              research, or just want to say hi? Feel free to reach out to me by
              clicking on the button below.
            </p>
            <br />
            <div class="mt-6">
              <strong>Data Scientist</strong>, <a href="https://www.apexrms.com"
                >ApexRMS</a
              >, Guelph, Ontario, Canada

              <br />
              <br />
              <strong>Adjunct Faculty</strong>,<a
                href="https://www.uwo.ca/biology//people/crossappointed-adjunct-and-sessional-faculty.html"
                > Biology Department</a
              >, Western University, London, Ontario, Canada
            </div>
            <br />
            <a href="mailto:alex.filazzola@apexrms.com">
              <Button>Contact</Button>
            </a>
          </div>
        </div>
      </div>
      <Footer />
    </div>
  </body>
</html>
