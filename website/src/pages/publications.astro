---
import MainHead from "../components/MainHead.astro";
import Footer from "../components/Footer/index.jsx";
import Nav from "../components/Nav/index.jsx";
import CitationsFormatted from "../components/Citations";
---

<html lang="en">
  <head>
    <MainHead
      title="Publications"
      description="Publications by Alessandro Filazzola"
    />
    <style lang="scss">
      .heroImg {
        max-height: 24rem;
        object-fit: cover;
        overflow: hidden;

        img {
          width: 100%;
        }
      }

      .aboutImage {
        width: 70%;
        height: auto;
      }
    </style>
  </head>
  <body>
    <div>
      <Nav />
      <div class="wrapper">
        <h1>Publications</h1>
        <div class="heroImg">
          <img width="1400" height="350" src="./granites.jpg" />
        </div>
      </div>
      <div><CitationsFormatted /></div>
      <Footer />
    </div>
  </body>
</html>
